#!/usr/bin/env bash

# Bash-friendly color prompt; fallback from Starship
if [ -t 1 ] && [ -n "$TERM" ] && [ "$TERM" != "dumb" ]; then
  PS1='\[\033[1;33m\]\u\[\033[0m\]@\[\033[32m\]\h\[\033[0m\]:\[\033[1;36m\]\w\[\033[0m\] \[\033[1;32m\]\$\[\033[0m\] '
fi

# If Starship is installed, do it
if command -v starship >/dev/null 2>&1; then
  eval $(starship init bash)
fi
